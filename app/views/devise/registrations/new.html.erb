<% content_for :title do t('.sign_up', :default => "Sign up") end %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),:class=>"form col-md-12 center-block") do |f| %>
  

  	  <%= devise_error_messages! %>

  <div class="form-group"><%= f.label :email %>
  <%= f.email_field :email, :class=>"form-control input-lg" %></div>

  <div class="form-group"><%= f.label :password %>
  <%= f.password_field :password , :class=>"form-control input-lg"%></div>

  <div class="form-group"><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :class=>"form-control input-lg" %></div>

  <div class="form-group"><%= f.submit t('.sign_up', :default => "Sign up"), :class => "btn btn-primary btn-lg btn-block"  %></div>
<% end %>

<%= render "devise/shared/links" %>
