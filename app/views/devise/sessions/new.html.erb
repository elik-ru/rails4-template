<% content_for :title do t('.sign_in', :default => "Sign in") end %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:class=>"form col-md-12 center-block") do |f| %>
  
 	<div class="form-group">
		<%= f.label :email %>	    
 	 	<%= f.email_field :email , :class=>"form-control input-lg"%>
	</div>

  <div class="form-group"><%= f.label :password %>
  <%= f.password_field :password, :class=>"form-control input-lg" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit t('.sign_in', :default => "Sign in"), :class => "btn btn-primary btn-lg btn-block" %></div>
<% end %>

<%= render "devise/shared/links" %>
